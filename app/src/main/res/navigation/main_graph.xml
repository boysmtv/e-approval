<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="id.co.ikonsultan.approval.feature.home.ui.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_homeFragment_to_requestFragment"
            app:destination="@id/requestFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mailFragment"
            app:destination="@id/mailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="id.co.ikonsultan.approval.feature.home.ui.SearchFragment"
        android:label="Search" />

    <fragment
        android:id="@+id/mailFragment"
        android:name="id.co.ikonsultan.approval.feature.home.ui.MailFragment"
        android:label="Mail" />

    <fragment
        android:id="@+id/settingFragment"
        android:name="id.co.ikonsultan.approval.feature.home.ui.SettingFragment"
        android:label="Setting" />

    <fragment
        android:id="@+id/historyFragment"
        android:name="id.co.ikonsultan.approval.feature.home.ui.HistoryFragment"
        android:label="History" />

    <fragment
        android:id="@+id/requestFragment"
        android:name="id.co.ikonsultan.approval.feature.home.ui.RequestFragment"
        android:label="Request" >
        <action
            android:id="@+id/action_requestFragment_to_detailRequestFragment"
            app:destination="@id/detailRequestFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailRequestFragment"
        android:name="id.co.ikonsultan.approval.feature.home.ui.DetailRequestFragment"
        android:label="RequestDetail" />

</navigation>