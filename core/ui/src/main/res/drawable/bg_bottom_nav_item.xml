<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SELECTED -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#3B2EA3"/>
            <corners android:radius="50dp"/>
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <!-- DEFAULT -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

</selector>