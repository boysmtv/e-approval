<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="16dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Ticket 001"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="30/10/2025"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tvTitle"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Status"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Reject"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tvStatusTitle"
            card_view:layout_constraintStart_toEndOf="@+id/tvStatusTitle"
            card_view:layout_constraintTop_toTopOf="@+id/tvStatusTitle" />

        <TextView
            android:id="@+id/tvRoleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Checker"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tvRole"
            card_view:layout_constraintEnd_toStartOf="@+id/tvRole"
            card_view:layout_constraintTop_toTopOf="@+id/tvRole" />

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Group Head"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tvStatusTitle"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/tvStatusTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>